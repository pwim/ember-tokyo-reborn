<h1 class="page-header">Repositories</h1>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Created At</th>
        <th>Updated At</th>
        <th>Issues</th>
        <th>Language</th>
      </tr>
    </thead>
    <tbody>
      {{#each model as |repos|}}
      <tr>
        <td>{{link-to repos.name 'repositories.repository' repos}}</td>
        <td>{{repos.created_at}}</td>
        <td>{{repos.updated_at}}</td>
        <td>{{repos.open_issues_count}}</td>
        <td>{{repos.language}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>